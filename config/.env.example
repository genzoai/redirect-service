# Server Configuration
NODE_ENV=production
PORT=3077

# Main Database (для логирования кликов)
# Docker: use DB_HOST=db
# Bare metal: use DB_HOST=localhost
DB_HOST=localhost
DB_PORT=3306
DB_USER=redirect_user
DB_PASSWORD=YOUR_DB_PASSWORD_HERE
DB_NAME=redirect_db

# Database Root Password (только для Docker first-time setup)
DB_ROOT_PASSWORD=YOUR_ROOT_PASSWORD_HERE

# WordPress Database (опционально - только если используется og_method: wordpress_db)
# Это должен быть READ-ONLY пользователь!
WP_DB_HOST=localhost
WP_DB_PORT=3306
WP_DB_USER=wp_readonly
WP_DB_PASSWORD=YOUR_WP_READONLY_PASSWORD_HERE

# API Authentication (для n8n и других клиентов)
API_BEARER_TOKEN=YOUR_BEARER_TOKEN_HERE

# GeoIP Settings
GEOIP_ENABLED=true

# Logging (опционально)
LOG_LEVEL=info
DEBUG=
