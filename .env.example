# Universal Redirect Service - Docker Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3077

# Main Database (for clicks logging)
# Note: DB_HOST should be 'db' when using Docker Compose
DB_HOST=db
DB_PORT=3306
DB_USER=redirect_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=redirect_db
DB_ROOT_PASSWORD=CHANGE_ME_ROOT_PASSWORD

# WordPress Database (optional - only if using og_method: wordpress_db)
# This should be a READ-ONLY user for security!
# Leave empty if not using WordPress DB
WP_DB_HOST=
WP_DB_PORT=3306
WP_DB_USER=
WP_DB_PASSWORD=

# API Authentication (for n8n and other API clients)
# Generate a strong random token
API_BEARER_TOKEN=CHANGE_ME_RANDOM_TOKEN_FOR_N8N

# GeoIP Settings
GEOIP_ENABLED=true

# Logging (optional)
LOG_LEVEL=info
DEBUG=
